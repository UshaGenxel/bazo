{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "bazo/event-grid",
	"version": "1.0.0",
	"title": "Event Grid",
	"category": "theme",
	"icon": "calendar-alt",
	"description": "Displays a grid of events with filtering and pagination.",
	"supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		]
	},
	"attributes": {
		"postsToShow": {
			"type": "number",
			"default": 9
		},
		"selectedCategories": {
			"type": "array",
			"default": [],
			"items": {
				"type": "number"
			}
		},
		"showLoadMoreButton": {
			"type": "boolean",
			"default": true
		},
		"postType": {
			"type": "string",
			"default": "post"
		},
		"taxonomy": {
			"type": "string",
			"default": "category"
		},
		"showLoader": {
			"type": "boolean",
			"default": true
		},
		"showAds": {
			"type": "boolean",
			"default": true
		},
		"adPositions": {
			"type": "array",
			"default": [
				{
					"position": 3,
					"span": 2,
					"text": "AD Video"
				},
				{
					"position": 15,
					"span": 4,
					"text": "AD Video"
				}
			],
			"items": {
				"type": "object",
				"properties": {
					"position": {
						"type": "number"
					},
					"span": {
						"type": "number"
					},
					"text": {
						"type": "string"
					}
				}
			}
		}
	},
	"textdomain": "bazo",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}